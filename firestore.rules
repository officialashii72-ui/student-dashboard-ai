rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection - profiles and discovery
    match /users/{userId} {
      // Anyone authenticated can read user profiles (for search/discovery)
      allow read: if isAuthenticated();
      
      // Only the user can write their own profile
      allow write: if isOwner(userId);
      
      // User's private tasks
      match /tasks/{taskId} {
        allow read, write: if isOwner(userId);
      }
      
      // User's private notes
      match /notes/{noteId} {
        allow read, write: if isOwner(userId);
      }
      
      // User's AI chat history
      match /aiChats/{chatId} {
        allow read, write: if isOwner(userId);
      }
      
      // User's study planner subjects
      match /subjects/{subjectId} {
        allow read, write: if isOwner(userId);
      }
      
      // User's friends list
      match /friends/{friendId} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
      }
    }
    
    // Friend requests - both sender and receiver can read
    match /friendRequests/{requestId} {
      allow read: if isAuthenticated() && 
        (request.auth.uid == resource.data.senderId || 
         request.auth.uid == resource.data.receiverId);
      
      // Only sender can create
      allow create: if isAuthenticated() && 
        request.resource.data.senderId == request.auth.uid;
      
      // Only receiver can update (accept/reject)
      allow update: if isAuthenticated() && 
        request.auth.uid == resource.data.receiverId;
      
      // Only sender can delete (cancel request)
      allow delete: if isAuthenticated() && 
        request.auth.uid == resource.data.senderId;
    }
    
    // Global chat messages - all authenticated users
    match /globalChat/{messageId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && 
        request.resource.data.senderId == request.auth.uid &&
        request.resource.data.text is string &&
        request.resource.data.text.size() > 0 &&
        request.resource.data.text.size() <= 1000; // Max 1000 chars
      
      // Only creator can delete their own messages
      allow delete: if isAuthenticated() && 
        resource.data.senderId == request.auth.uid;
    }
    
    // Direct messages between friends
    match /directMessages/{messageId} {
      allow read: if isAuthenticated() && 
        (request.auth.uid == resource.data.senderId || 
         request.auth.uid == resource.data.receiverId);
      
      allow create: if isAuthenticated() && 
        request.resource.data.senderId == request.auth.uid;
    }
    
    // Shared tasks (tasks shared with friends)
    match /sharedTasks/{sharedTaskId} {
      allow read: if isAuthenticated() && 
        (request.auth.uid == resource.data.ownerId || 
         request.auth.uid in resource.data.sharedWith);
      
      // Only owner can create/update/delete
      allow write: if isAuthenticated() && 
        request.auth.uid == resource.data.ownerId;
    }
    
    // Shared notes (notes shared with friends)
    match /sharedNotes/{sharedNoteId} {
      allow read: if isAuthenticated() && 
        (request.auth.uid == resource.data.ownerId || 
         request.auth.uid in resource.data.sharedWith);
      
      // Only owner can create/update/delete
      allow write: if isAuthenticated() && 
        request.auth.uid == resource.data.ownerId;
    }
    
    // Activity feed (friend actions)
    match /activities/{activityId} {
      // Users can read activities from their friends
      allow read: if isAuthenticated();
      
      // Users can create their own activities
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
    }
    
    // System-wide analytics (aggregated, no personal data)
    match /analytics/{docId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only backend can write
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
